# PageSage Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to git - it contains secrets!

# ============================================
# GitHub Integration
# ============================================

# GitHub Personal Access Token for MCP Server
# Generate at: https://github.com/settings/tokens/new
# Required scopes: repo, read:user
# Used by: Claude Code GitHub MCP server
GITHUB_MCP_TOKEN=ghp_your_github_token_here

# GitHub OAuth App Credentials (for user authentication in PageSage)
# Create at: https://github.com/settings/developers
# Callback URL: http://localhost:5173/auth/callback (dev) or your production URL
GITHUB_CLIENT_ID=your_client_id_here
GITHUB_CLIENT_SECRET=your_client_secret_here

# ============================================
# Google Cloud Platform (OCR & AI)
# ============================================

# Google Cloud Project ID
# Create project at: https://console.cloud.google.com/
GOOGLE_CLOUD_PROJECT_ID=your_project_id_here

# Google Document AI API Key
# Enable API at: https://console.cloud.google.com/apis/library/documentai.googleapis.com
GOOGLE_DOCUMENT_AI_API_KEY=your_api_key_here

# Google Gemini API Key (for AI-assisted features)
# Get key at: https://makersuite.google.com/app/apikey
GOOGLE_GEMINI_API_KEY=your_gemini_key_here

# ============================================
# Code Quality & Monitoring (Optional)
# ============================================

# Codacy API Token (for code quality metrics)
# Generate at: https://app.codacy.com/account/apiTokens
CODACY_API_TOKEN=your_codacy_token_here

# ============================================
# Application Configuration
# ============================================

# Environment: development, staging, or production
NODE_ENV=development

# Application URL (used for OAuth callbacks and links)
APP_URL=http://localhost:5173

# Session secret for cookie encryption (generate a random string)
# Generate with: openssl rand -hex 32
SESSION_SECRET=your_random_session_secret_here

# ============================================
# Feature Flags (Optional)
# ============================================

# Enable debug logging
DEBUG=false

# Enable cost tracking UI
ENABLE_COST_TRACKING=true

# Maximum book size in MB
MAX_BOOK_SIZE_MB=500

# OCR confidence threshold (0-1, lower = more permissive)
OCR_CONFIDENCE_THRESHOLD=0.7
